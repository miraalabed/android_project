<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="12dp"
    android:background="@android:color/white"
    android:elevation="2dp" android:layout_marginBottom="8dp">

    <TextView android:id="@+id/news_title"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="News Title" android:textSize="18sp"
        android:textStyle="bold" android:textColor="#008080"/>

    <TextView android:id="@+id/news_content"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Content" android:textSize="14sp"
        android:textColor="#555555" android:layout_marginTop="4dp"/>

    <TextView android:id="@+id/news_date"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Date" android:textSize="12sp"
        android:textColor="#FF6600" android:layout_marginTop="4dp"/>
</LinearLayout>
